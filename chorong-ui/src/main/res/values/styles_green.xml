<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="greenPrimaryDark">#00c30e</color>

    <style name="MyGreenTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">#4a4a50</item>
    </style>

    <style name="MyGreenToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title" >
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="MyGreenToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">#ffffff</item>
    </style>

    <style name="MyAppThemeBase.Green" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/greenPrimaryDark</item>

        <item name="colorPrimaryDark">@color/greenPrimaryDark</item>
        <item name="colorAccent">@color/greenPrimaryDark</item>
        <item name="colorControlHighlight">@color/greenPrimaryDark</item>

        <item name="colorPrimary">#25cb31</item>
        <item name="colorControlNormal">#999999</item>

        <item name="android:textViewStyle">@style/MyGreenTextViewStyle</item>
        <item name="myToolbarTitleStyle">@style/MyGreenToolbarTitle</item>
        <item name="myToolbarTheme">@style/MyGreenToolbarTheme</item>
    </style>

    <style name="MyAppTheme.Green" parent="MyAppThemeBase.Green">
    </style>

</resources>
