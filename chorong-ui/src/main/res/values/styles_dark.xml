<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="darkPrimaryDark">#4a4a50</color>

    <style name="MyDarkTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">#4a4a50</item>
    </style>

    <style name="MyDarkToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title" >
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="MyDarkToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">#ffffff</item>
    </style>

    <style name="MyAppThemeBase.Dark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/darkPrimaryDark</item>

        <item name="colorPrimaryDark">@color/darkPrimaryDark</item>
        <item name="colorAccent">@color/darkPrimaryDark</item>
        <item name="colorControlHighlight">@color/darkPrimaryDark</item>

        <item name="colorPrimary">#4a4a50</item>
        <item name="colorControlNormal">#999999</item>

        <item name="android:textViewStyle">@style/MyDarkTextViewStyle</item>
        <item name="myToolbarTitleStyle">@style/MyDarkToolbarTitle</item>
        <item name="myToolbarTheme">@style/MyDarkToolbarTheme</item>
        <item name="myNavigationViewTheme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

    <style name="MyAppTheme.Dark" parent="MyAppThemeBase.Dark">
    </style>

</resources>
