<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="skyPrimaryDark">#0593de</color>

    <style name="MySkyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">#4a4a50</item>
    </style>

    <style name="MySkyToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title" >
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="MySkyToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">#ffffff</item>
    </style>

    <style name="MyAppThemeBase.Sky" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/skyPrimaryDark</item>

        <item name="colorPrimaryDark">@color/skyPrimaryDark</item>
        <item name="colorAccent">@color/skyPrimaryDark</item>
        <item name="colorControlHighlight">@color/skyPrimaryDark</item>

        <item name="colorPrimary">#039be5</item>
        <item name="colorControlNormal">#999999</item>

        <item name="android:textViewStyle">@style/MySkyTextViewStyle</item>
        <item name="myToolbarTitleStyle">@style/MySkyToolbarTitle</item>
        <item name="myToolbarTheme">@style/MySkyToolbarTheme</item>
        <item name="myNavigationViewTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="MyAppTheme.Sky" parent="MyAppThemeBase.Sky">
    </style>

</resources>
